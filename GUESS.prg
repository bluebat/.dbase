  case 次數 < 11                                                           &&51
    結論 = '再 玩 一 次 吧 !'                                              &&52
  case 次數 < 17                                                           &&53
    結論 = '你 終 於 矇 對 了 !'                                           &&54
  otherwise                                                                &&55
    結論 = '啍!不 讓 你 玩 了 !'                                           &&56
